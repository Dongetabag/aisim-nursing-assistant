# Production Environment Configuration
# AISim Nursing Assistant

# Server Configuration
NODE_ENV=production
PORT=3000
APP_VERSION=1.0.0
APP_NAME=AISim Nursing Assistant

# Google Gemini AI Configuration
# IMPORTANT: Replace with your production API key
GOOGLE_GEMINI_API_KEY=your_production_api_key_here

# CORS Configuration
# Add your production domain(s) separated by commas
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com
CORS_WHITELIST=https://your-domain.com,https://www.your-domain.com

# Security Configuration
# Generate a strong secret for session management
SESSION_SECRET=generate_a_strong_random_secret_here_min_32_chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CHART_LIMIT_WINDOW_MS=60000
CHART_LIMIT_MAX_REQUESTS=10

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/aisim-nursing

# Database Configuration (for future implementation)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=aisim_nursing
# DB_USER=aisim_user
# DB_PASSWORD=strong_password_here
# DB_SSL=true

# Redis Configuration (for session storage - future)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_PASSWORD=redis_password_here

# HIPAA Compliance
ENABLE_AUDIT_LOGGING=true
AUDIT_LOG_RETENTION_DAYS=2555
DATA_ENCRYPTION_ENABLED=true

# Performance
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_MAX_AGE=86400

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_ENABLED=true

# Email Notifications (for alerts - future)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@domain.com
# SMTP_PASSWORD=your-email-password
# SMTP_FROM=noreply@your-domain.com

# SSL/TLS Configuration
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/key.pem

# Sentry Error Tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Feature Flags
ENABLE_PWA=true
ENABLE_OFFLINE_MODE=true
ENABLE_PUSH_NOTIFICATIONS=false
